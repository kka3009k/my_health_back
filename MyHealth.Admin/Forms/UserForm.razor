@inherits FormBase<User>

<ListForm TEntity="User" @ref="_listForm" OnEdit="OnEditClick">
    <Columns>
        <RadzenDataGridColumn TItem="User" Property="@nameof(User.ID)" Title="ID" Frozen="true" Width="10%" TextAlign="TextAlign.Center" />
        <RadzenDataGridColumn TItem="User" Property="@nameof(User.Phone)" Title="Phone" Frozen="true" Width="10%" TextAlign="TextAlign.Center" />
        <RadzenDataGridColumn TItem="User" Property="@nameof(User.FirstName)" Title="FirstName" Frozen="true" Width="10%" TextAlign="TextAlign.Center" />
        <RadzenDataGridColumn TItem="User" Property="@nameof(User.LastName)" Title="LastName" Frozen="true" Width="10%" TextAlign="TextAlign.Center" />
        <RadzenDataGridColumn TItem="User" Property="@nameof(User.Patronymic)" Title="Patronymic" Frozen="true" Width="10%" TextAlign="TextAlign.Center" />
        <RadzenDataGridColumn TItem="User" Property="@nameof(User.Email)" Title="Email" Frozen="true" Width="10%" TextAlign="TextAlign.Center" />
        <RadzenDataGridColumn TItem="User" Property="@nameof(User.INN)" Title="INN" Frozen="true" Width="10%" TextAlign="TextAlign.Center" />
    </Columns>
</ListForm>

<EditEntityForm TEntity="User" @ref="_editForm" OnSave="OnSaveClick" OnCancel="OnCancelClick">
    <Fields Context="ctx">
        <RadzenColumn Size="12" SizeMD="6" SizeLG="3">
            <RadzenFormField Text="Phone">
                <RadzenTextBox @bind-Value="@ctx.Phone" />
            </RadzenFormField>
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6" SizeLG="3">
            <RadzenFormField Text="FirstName">
                <RadzenTextBox @bind-Value="@ctx.FirstName" />
            </RadzenFormField>
        </RadzenColumn>
    </Fields>
</EditEntityForm>