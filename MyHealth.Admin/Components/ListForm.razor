@typeparam TEntity

<div class="component-wrapper">
    <div class="component-header">@typeof(TEntity).Name</div>
    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Start" Wrap="FlexWrap.Wrap" Visible="!_isEdit">
        <RadzenButton ButtonStyle="ButtonStyle.Success" Icon="add_circle_outline"
                      class="mt-2 mb-4" Text="Создать" Click="@Insert"
                      Size="ButtonSize.Small" />
        @*<RadzenFormField Text="Поиск">
        <RadzenTextBox Placeholder="Поиск..." ValueChanged="OnSearch" />
        </RadzenFormField>*@
    </RadzenStack>

    <RadzenDataGrid TItem="TEntity" style="height: auto" @ref="_grid"
                    Count="_count"
                    Data="_items"
                    LoadData="@LoadData"
                    AllowSorting="true"
                    AllowFiltering="true"
                    AllowPaging="true" Visible="!_isEdit"
                    PageSize="10"
                    PagerHorizontalAlign="HorizontalAlign.Center"
                    ColumnWidth="200px">
        <Columns>
            <RadzenDataGridColumn Width="5%" TItem="TEntity" Title="#" Filterable="false" Sortable="false" Frozen="true" TextAlign="TextAlign.Center">
                <Template Context="item">
                    <RadzenButton Icon="edit" ButtonStyle="ButtonStyle.Light" Variant="Variant.Flat"
                                  Size="ButtonSize.Small"
                                  Click="() => Edit(item)" @onclick:stopPropagation="true" />
                    <RadzenButton Icon="delete" ButtonStyle="ButtonStyle.Danger" Variant="Variant.Flat"
                                  Size="ButtonSize.Small"
                                  Click="() => OnDeleteClick(item)" @onclick:stopPropagation="true" />
                </Template>
            </RadzenDataGridColumn>
            @Columns
        </Columns>
    </RadzenDataGrid>
</div>

