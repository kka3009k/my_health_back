@typeparam TEntity

<RadzenRow AlignItems="AlignItems.End" Wrap="FlexWrap.Wrap" Gap="1rem" Class="rz-p-sm-12" Visible="_isEdit">
    @Fields(_item)
</RadzenRow>

<RadzenRow AlignItems="AlignItems.End" Wrap="FlexWrap.Wrap" Gap="1rem" Class="rz-p-sm-12" Visible="_isEdit">
    <RadzenButton ButtonStyle="ButtonStyle.Success" Icon="save" class="mt-2 mb-4" Text="Сохранить" Size="ButtonSize.Small" Click="SaveClick" />
    <RadzenButton ButtonStyle="ButtonStyle.Secondary" Icon="cancel" class="mt-2 mb-4" Text="Отмена" Size="ButtonSize.Small" Click="CancelClick" />
</RadzenRow>