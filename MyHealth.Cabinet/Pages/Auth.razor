@page "/auth"

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="login-wrap p-4 p-md-5">
                <div class="icon d-flex align-items-center justify-content-center">
                    <span class="fa fa-user-o"></span>
                </div>
                <h3 class="text-center mb-4">Авторизация</h3>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-i">
                            <i class="bi bi-person-circle" aria-hidden="true"></i>
                        </div>
                        <input type="text" class="form-control rounded-left" placeholder="Почта" value="@_username"
                        @oninput="(val) => { _username = (string)val.Value; StateHasChanged(); }" @onkeydown="OnKeyDown"
                               autocomplete="off">
                    </div>
                </div>
                <div class="form-group d-flex">
                    <div class="input-group">
                        <div class="input-group-i">
                            @if (_pwdTypeInput == "password")
                            {
                                <span @onclick="showPassword">
                                    <i class="bi bi-eye"></i>
                                </span>
                            }
                            else
                            {
                                <span @onclick="showPassword">
                                    <i class="bi bi-eye-slash"></i>
                                </span>
                            }
                        </div>
                        <input class="form-control rounded-left" placeholder="Пароль" type="@_pwdTypeInput"
                        @bind-value="_password"
                        @onkeydown="OnKeyDown"
                               autocomplete="off">
                    </div>
                </div>
                <div>
                    <div class="d-flex justify-content-end">
                        <div class="link-primary cur-pointer" @onclick="@(() => _navigationService.NavigateTo($"password/recovery/{_username}"))">Забыли пароль?</div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-primary" @onclick="Login" disabled="@(!Validate())"><i class="bi bi-box-arrow-in-right"></i> Войти</button>
                    </div>
                    <div class="d-flex justify-content-center">
                        или
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-primary" @onclick="Registration"><i class="bi bi-person-plus"></i> Регистрация</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>